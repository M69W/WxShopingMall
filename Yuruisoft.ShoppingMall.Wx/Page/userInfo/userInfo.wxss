/* userInfo.wxss */

.page__hd {
  padding: 10px;
}

.userTitleCard {
  height: 100px;
  width: 100%;
  background-color: #18bc9c;
  border-radius: 5px;
}

.userHeadPhoto {
  margin-left: 10px;
  width: 60px;
  height: 60px;
  border-radius: 50px;
}

.nickName {
  color: #fff;
  font-size: 15px;
}

.haowanFamilyName {
  color: #fff;
  font-size: 12px;
}

.userName {
  padding-left: 10px;
}

.config {
  padding-right: 10px;
}

.itemInOrder {
  width: 25%;
  flex-direction: column;
  text-align: center;
}

.badgeInTypeOne {
  position: absolute;
}

.backgroundColor {
  background-color: #f8f8f8;
}

.weui-panel__bd {
  border-bottom: 1rpx solid #d7d6dc;
}

/**
自定义模态框----开始
*/

.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  font: 18px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #18BC9C;
}

.top {
  padding-top: 8px;
}

.bottom {
  padding-bottom: 8px;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}

.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}

.input_h30 {
  height: 30px;
  line-height: 30px;
}

.input_h60 {
  height: 60px;
}

.input_view {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
  line-height: 30px;
}

input {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
}

radio {
  margin-right: 20px;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
  box-flex: 0;
}

.col-1 {
  -webkit-box-flex: 1;
  box-flex: 1;
}

.fl {
  float: left;
}

.fr {
  float: right;
}
/**
自定义模态框----结束
*/
