/* shoppingCart.wxss */

.shoppingCheckNow {
  color: white;
  font-size: 20px;
  background-color: #e33a3c;
  text-align: center;
  width: 150px;
}

.shoppingTotalFee {
  color: black;
  background-color: #fff;
  display: flex;
  width: 60%;
}

.totalFeeText {
  font-size: 20px;
}

.privilegeFeeText {
  font-size: 12px;
  color: gray;
}

.boxInside {
  text-align: center;
  flex-direction: column;
}

.iconStyle {
  font-size: 20px;
}

.chooseText {
  font-size: 12px;
  color: black;
}

.chooseAll {
  background-color: #fff;
  z-index: 1000;
  width: 50px;
}

.weui-panel__hd {
  padding: 10px 10px;
}

.display2Lines {
  font-size: 15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.weui-media-box {
  padding-left: 10px;
}

.boxBlow {
  margin-top: 10px;
}


.buy-num {
  width: 100px;
  display: flex;
  font-size: 20px;
  text-align: center;
}

.titleNum {
  color: gray;
  width: 20%;
  font-size: 15px;
}

.jian-btn {
  width: 30%;
  border: 1rpx solid #ccc;

  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
}

.jia-btn {
  width: 30%;
  border: 1rpx solid #ccc;

  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.inputContainer {
  width: 40%;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  min-height: 10px;
  text-align: center;
  font-size: 15px;
}

.disabled {
  background-color: #f5f5f9;
  border: 1rpx solid #eee;
  color: #ccc;
}
.weui-media-box__hd_in-appmsg {
  width: 80px;
  height: 80px;
}
