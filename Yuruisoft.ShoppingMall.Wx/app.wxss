@import 'style/weui.wxss';
@import 'style/Font.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.icon {
  font-family: 'FontAwesome';
}

.icon-ban-circle {
  font-size: 12px;
}

.icon-ban-circle:before {
  content: '\f05e';
  color: gray;
}

.icon-ok-circle {
  font-size: 12px;
}

.icon-ok-circle:before {
  content: '\f05d';
  color: red;
}

.icon-angle-right {
  font-size: 20px;
}

.icon-angle-right:after {
  content: '\f105';
  color: gray;
}

.icon-angle-up {
  font-size: 20px;
}

.icon-angle-up:after {
  content: '\f106';
  color: gray;
}

.icon-angle-down {
  font-size: 20px;
}

.icon-angle-down:after {
  content: '\f107';
  color: gray;
}

.icon-shoppingCart {
  font-size: 25px;
}

.icon-shoppingCart:after {
  content: '\f07a';
  color: black;
}

.icon-phone {
  font-size: 30rpx;
}

.icon-phone::before {
  content: '\f095';
  color: gray;
}

.icon-mobile-phone {
  font-size: 30rpx;
}

.icon-mobile-phone::before {
  content: '\f10b';
  color: gray;
}

.verticalCenter {
  display: -webkit-flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.spaceBetween {
  display: flex;
  justify-content: space-between;
}
